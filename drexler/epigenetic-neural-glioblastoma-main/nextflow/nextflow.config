/*
 * Nextflow configuration for Neural Glioblastoma Classification Pipeline
 */

// Default parameters
params {
    input_dir = null
    sample_ids = null
    output_dir = "./results"
    min_coverage = 1
    genome = "hg38"
    script_dir = "${projectDir}/../code"
    help = false
}

// Process configuration
process {
    // Default resources
    cpus = 1
    memory = '4 GB'
    //time = '1h'

    // Specific process configurations
    withName: 'CLASSIFY_SAMPLE' {
        cpus = 4
        memory = '8 GB'
        //time = '2h'
    }

    withName: 'AGGREGATE_RESULTS' {
        cpus = 1
        memory = '2 GB'
        //time = '30m'
    }
}

// Execution profiles
profiles {
    standard {
        process.executor = 'local'
    }

    slurm {
        process.executor = 'slurm'
        process.queue = 'normal'
    }

    conda {
        conda.enabled = true
        process.conda = 'drexler_env'
    }

    docker {
        docker.enabled = true
        docker.runOptions = '-u $(id -u):$(id -g)'
    }

    singularity {
        singularity.enabled = true
        singularity.autoMounts = true
    }
}

// Reporting
report {
    enabled = true
    file = "${params.output_dir}/pipeline_report.html"
}

timeline {
    enabled = true
    file = "${params.output_dir}/pipeline_timeline.html"
}

trace {
    enabled = true
    file = "${params.output_dir}/pipeline_trace.txt"
}

// Manifest
manifest {
    name = 'Neural Glioblastoma Classification'
    author = 'Drexler Pipeline Adaptation'
    description = 'Classify Nanopore methylation data using neural signature score'
    version = '1.0.0'
    mainScript = 'main.nf'
    nextflowVersion = '>=21.04.0'
}
